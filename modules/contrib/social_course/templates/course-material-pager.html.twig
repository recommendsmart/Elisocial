{{ attach_library('socialbase/pagination') }}

<nav class="pager-nav text-center material-navigation" role="navigation" aria-labelledby="pagination-heading">
  <h4 id="pagination-heading" class="visually-hidden">{{ 'Pagination'|t }}</h4>
  <ul class="pagination">
    <li class="pager__item--previous">{{ material.previous }}</li>
    <li class="pager__item"><span>{{ material.number }} / {{ material.count }}
      </span></li>
    <li class="pager__item--next">{{ material.next }}</li>
  </ul>
</nav>

